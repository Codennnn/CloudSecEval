{
  "name": "@mono/api",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "license": "UNLICENSED",
  "author": "LeoKu",
  "scripts": {
    "build": "nest build",
    "build:prod": "pnpm prisma:generate:prod && nest build",
    "clean": "rimraf dist generated node_modules",
    "deps": "pnpm up --interactive --latest",
    "lint": "pnpm lint:es && pnpm lint:ts",
    "lint:es": "eslint \"{src,apps,libs,test}/**/*.ts\" \"docker/**/*.mjs\" --fix",
    "lint:ts": "tsc --noEmit --skipLibCheck",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --env-file .env.development -b swc -w",
    "start:test": "nest start --env-file .env.test -b swc -w",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:generate:prod": "prisma generate --no-engine",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "db:cli": "node db/scripts/cli.mjs",
    "db:status": "node db/scripts/status.mjs",
    "db:init": "pnpm prisma:format && pnpm prisma:generate && pnpm prisma:push",
    "db:quick": "ts-node -r tsconfig-paths/register src/prisma/seeds/main.ts full --quick",
    "dev": "pnpm prisma:generate && pnpm start:dev",
    "docker:install": "node docker/scripts/install.mjs",
    "docker:start": "node docker/scripts/start.mjs",
    "docker:stop": "node docker/scripts/stop.mjs",
    "docker:status": "node docker/scripts/status.mjs",
    "docker:logs": "node docker/scripts/logs.mjs",
    "docker:build": "node docker/scripts/build.mjs",
    "docker:publish": "node docker/scripts/publish.mjs",
    "docker:inspect": "node docker/scripts/inspect-image.mjs",
    "db:dev:up": "cd docker && docker compose -f docker-compose.dev.yml up -d postgres",
    "db:dev:down": "cd docker && docker compose -f docker-compose.dev.yml down",
    "db:dev:logs": "cd docker && docker compose -f docker-compose.dev.yml logs -f postgres",
    "db:dev:reset": "pnpm db:dev:down && docker volume rm docker_postgres_dev_data 2>/dev/null || true && pnpm db:dev:up",
    "pgadmin:up": "cd docker && docker compose -f docker-compose.dev.yml --profile admin up -d",
    "pgadmin:down": "cd docker && docker compose -f docker-compose.dev.yml --profile admin down",
    "redis:up": "cd docker && docker compose -f docker-compose.dev.yml --profile cache up -d redis",
    "redis:down": "cd docker && docker compose -f docker-compose.dev.yml --profile cache down",
    "dev:db": "pnpm db:dev:up && sleep 5 && pnpm db:init",
    "dev:full": "pnpm dev:db && pnpm dev"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/$1",
      "^#prisma/(.*)$": "<rootDir>/../generated/$1"
    },
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(nanoid)/)"
    ]
  },
  "dependencies": {
    "@date-fns/tz": "^1.4.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.15.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "dompurify": "^3.2.7",
    "exceljs": "^4.4.0",
    "jsdom": "^27.0.0",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "radash": "^12.1.1",
    "reflect-metadata": "^0.2.2",
    "resend": "^4.7.0",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.1.6",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/multer": "^2.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "dotenv": "^17.2.2",
    "inquirer": "^12.9.4",
    "jest": "^30.1.3",
    "prisma": "^6.15.0",
    "source-map-support": "^0.5.21",
    "string-width": "^8.1.0",
    "supertest": "^7.1.3",
    "table": "^6.9.0",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "packageManager": "pnpm@9.15.3"
}
