{
  "name": "@mono/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": " pnpm api:setup && next dev -p 8080",
    "build": "pnpm api:setup && next build",
    "clean": "pnpm api:clean && rimraf node_modules .next",
    "start": "next start -p 8080",
    "deps": "pnpm up --interactive --latest",
    "lint": "run-p lint:ts lint:es lint:css",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:es": "eslint \"**/*.{ts,tsx}\"",
    "lint:ts": "tsc --noEmit --skipLibCheck",
    "format:docs": "prettier --write \"src/content/docs/**/*.mdx\"",
    "api:generate": "openapi-ts",
    "api:clean": "rimraf src/lib/api/generated",
    "api:setup": "pnpm api:clean && pnpm api:generate",
    "api:fetch-spec": "curl -s 'http://[::1]:8007/api-docs-json' -o src/lib/api/openapi-spec.json",
    "api:update": "pnpm api:fetch-spec && pnpm api:setup"
  },
